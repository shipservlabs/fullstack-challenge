{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backend/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/backend",
        "main": "apps/backend/src/index.ts",
        "tsConfig": "apps/backend/tsconfig.json",
        "assets": [],
        "generatePackageJson": true,
        "includeDevDependenciesInPackageJson": false,
        "srcRootForCompilationRoot": "apps/backend"
      }
    },
    "dev": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "backend:build",
        "watch": true
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "backend:build",
        "watch": false
      }
    },
    "serve:debug": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "backend:build", 
        "watch": true,
        "inspect": true,
        "inspectPort": 9229
      }
    }
  },
  "tags": []
}
